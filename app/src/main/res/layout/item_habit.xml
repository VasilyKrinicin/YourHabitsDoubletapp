<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_habit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"

    >

    <TextView
        android:id="@+id/nameHabit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/simple_text_name_habit"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descriptionHabit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/simple_text_description_habit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameHabit" />

    <TextView
        android:id="@+id/typeHabit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/simple_text_type_habit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionHabit" />

    <TextView
        android:id="@+id/frequencyHabit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/simple_textfrequancy_habit"
        app:layout_constraintStart_toEndOf="@+id/typeHabit"
        app:layout_constraintTop_toBottomOf="@+id/descriptionHabit" />

    <TextView
        android:id="@+id/priorityHabit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/simple_text_priority_habit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/typeHabit"

        />


</androidx.constraintlayout.widget.ConstraintLayout>