<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:id="@+id/item_habit"

    >

    <TextView
        android:id="@+id/nameHabit"
        android:text="Название привычки"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/descriptionHabit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Описание привычки "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameHabit" />
    <TextView
        android:id="@+id/typeHabit"
        android:text="Тип привычки"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionHabit"/>
    <TextView
        android:id="@+id/frequencyHabit"
        android:text="Частота повторений"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/typeHabit"
        app:layout_constraintTop_toBottomOf="@+id/descriptionHabit"
        android:layout_marginStart="8dp"
        />
    <TextView
        android:id="@+id/priorityHabit"
        android:text="Приоритет привычки"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/typeHabit"

        />


</androidx.constraintlayout.widget.ConstraintLayout>